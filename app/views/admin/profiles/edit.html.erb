<% content_for :sub_header do %>
  <div class='row'>
    <div class='col-sm-6'>
      <h2><%= t("models_and_attributes.models.administrator.other") %></h2>
      <ol class='breadcrumb'>
        <li><%= link_to t('page.modules.home'), [:admin, :root] %></li>
        <li class='active'>
          <strong><%= t('page.modules.profile') %></strong>
        </li>
      </ol>
    </div>
    <div class='col-sm-6 text-right'>
      <%= link_to '#', class: 'btn btn-w-s btn-primary m-t-md',
            data: {'form-submit' => url_for([:admin, :profile])} do %>

        <i class='fa fa-save'></i><br/>
        <%= t('buttons.save') %>
      <% end %>
      <%= link_to [:admin, :root], class: 'btn btn-w-s btn-warning m-t-md' do %>
        <i class='fa fa-remove'></i><br/>
        <%= t('buttons.cancel') %>
      <% end %>
    </div>
  </div>
<% end %>

<%= flash_messages %>
<div class="row">
  <div class='col-xs-12 current-responsive-padding'>
    <div class='ibox float-e-margins'>
      <div class='ibox-content protected'>
        <%= simple_form_for(current_user, url: [:admin, :profile]) do |f| %>
          <div class='form-inputs'>
            <div class='row'>
              <div class='col-md-6'>
                <%= f.input :name, input_html: {'responsive-focus' => true} %>
              </div>
              <div class='col-md-6'>
                <%= f.input :email, required: true %>
              </div>
            </div>

            <div class='row'>
              <div class='col-md-4'>
                <%= f.input :current_password, input_html: {'fake-password' => true} %>
              </div>
              <div class='col-md-4'>
                <%= f.input :password, hint: current_user.errors[:password].blank? ? t('info.editing_password') : '',
                      input_html: {'fake-password' => true} %>
              </div>
              <div class='col-md-4'>
                <%= f.input :password_confirmation, input_html: {'fake-password' => true} %>
              </div>
            </div>

            <%= f.submit '', class: 'hide' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>