<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta name="viewport" content="width=device-width" />
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <%= stylesheet_link_tag 'email', media: 'all' %>
</head>

<body>

  <table class="body-wrap">
    <tr>
      <td></td>
      <td class="container" width="600">
        <div class="content">
          <table class="main" width="100%" cellpadding="0" cellspacing="0">
            <tr>
              <td class="content-wrap">
                <table cellpadding="0" cellspacing="0" style="width: 100%">
                  <tr>
                    <td class="logo-name aligncenter">
                      <%= image_tag("deleatur-xs.png") %><%= t('app.name') %>
                    </td>
                  </tr>
                  <tr>
                    <td class="content-block aligncenter font-md">
                      <h3><%= t('passwords.email.greeting', name: @resource.name) %></h3>
                    </td>
                  </tr>
                  <tr>
                    <td class="content-block aligncenter">
                      <%= t('passwords.email.info_1') %><br/>
                      <%= t('passwords.email.info_2') %>
                    </td>
                  </tr>
                  <tr>
                    <td class="content-block aligncenter no-padding">
                      <%= link_to t('buttons.change_my_password'),
                            edit_password_url(@resource, reset_password_token: @token),
                          class: 'btn-primary', target: :_blank %>

                      <p class="comments">
                        <%= t('passwords.email.warning') %>
                      </p>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
          <div class="footer">
            <table width="100%">
              <tr>
                <td class="aligncenter content-block">
                  <strong><%= t('app.name') %></strong> <%= Date.today.year %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </td>
      <td></td>
    </tr>
  </table>

</body>
</html>