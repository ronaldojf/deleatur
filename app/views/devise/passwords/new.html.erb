<div class='passwordBox animated fadeInDown'>
  <div class='row'>

    <div class='col-md-12'>
      <div class='ibox-content'>
        <h2 class='font-bold text-center'><%= t('passwords.new.title') %></h2>
        <p class='text-center'><%= t('passwords.new.greeting') %></p>

        <div class='row'>
          <div class='col-lg-12'>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'm-t' }) do |f| %>
              <%= custom_flash_messages fixed: true, alert: { show: alert, message: I18n.t('passwords.errors.found_errors') } %>

              <div class='form-group'>
                <%= f.input :email, label: false, required: true, input_html: {'responsive-focus' => true} %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, t('buttons.send_password_instructions'), class: 'btn btn-primary block full-width m-b' %>

                <p class="text-muted text-center"><%= t('view.keywords.or') %></p>
                <a class="btn btn-sm btn-white btn-block" href="<%= new_session_path(resource_name) %>"><%= t('buttons.back_to_login') %></a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class='row'>
    <div class='col-md-12 text-center'>
      <small>
        <strong><%= t('page.titles.short') %></strong> <%= Date.today.year %>
      </small>
    </div>
  </div>
</div>



