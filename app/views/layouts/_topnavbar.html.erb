<div class='row border-bottom'>
  <nav class='navbar navbar-static-top m-b-none'>
    <div class='navbar-header'>
      <a class='navbar-minimalize minimalize-styl-2 btn btn-primary' href='#'>
        <i class='fa fa-bars'></i>
      </a>
    </div>
    <ul class='nav navbar-top-links navbar-right user-menu-responsive'>
      <% if current_user.student? %>
        <li class='hidden-xs'>
          <span class="label label-<%= (@user_pontuation > 0) ? 'info' : 'warning' %>">
            <%= t('view.keywords.points', count: number_with_precision(@user_pontuation, precision: 2)) %>
          </span>
        </li>
      <% end %>

      <li>
        <span class='m-r-sm text-muted welcome-message'>
          <%= t('page.welcome_html', app_name: t('app.name')) %>
        </span>
      </li>

      <li class='visible-xs user-menu-item-responsive'>
        <div class='dropdown'>
          <a data-toggle='dropdown' class='dropdown-toggle btn btn-primary' href='#'>
            <b class='caret'></b>
          </a>
          <ul class='dropdown-menu animated fadeInRight user-menu'>
            <li>
              <%= link_to [:edit, current_namespace, :profile] do %>
                <i class='fa fa-edit'></i> <%= t('profile.edit') %>
              <% end %>
            </li>
            <li class='divider'></li>
            <li>
              <%= link_to destroy_session_path(current_user.user_type), method: :delete,
                  data: {confirm: t('js.messages.contents.signout')} do %>
                <i class='fa fa-sign-out'></i> <%= t('profile.signout') %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>

      <% if current_user.student? %>
        <li class='top-pontuation visible-xs p-xss'>
          <span class='label label-info'>
            <%= t('view.keywords.points', count: number_with_precision(@user_pontuation, precision: 2)) %>
          </span>
        </li>
      <% end %>

      <li class='hidden-xs'>
        <%= link_to destroy_session_path(current_user.user_type), method: :delete, class: 'superior-logout',
            data: {confirm: t('js.messages.contents.signout')} do %>
          <i class='fa fa-sign-out'></i> <%= t('profile.signout') %>
        <% end %>
      </li>
    </ul>
  </nav>
</div>