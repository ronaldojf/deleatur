<% content_for :angular_controller, 'NgTableController' %>
<% content_for :sub_header do %>
  <div class='row'>
    <div class='col-xs-12'>
      <h2><%= t('models_and_attributes.models.questionnaire.other') %></h2>
      <ol class='breadcrumb'>
        <li><%= link_to t('page.modules.home'), student_root_path %></li>
        <li class='active'>
          <strong><%= t('page.modules.questionnaires') %></strong>
        </li>
      </ol>
    </div>
  </div>
<% end %>

<%= flash_messages %>

<div class="row responsive-padding">
  <div class='col-xs-12' ng-init="initTable(<%= @config.to_json_with_active_support_encoder %>, 'questionnaires')">
    <div class='ibox float-e-margins'>
      <div class='ibox-title'>
        <h5>
          <%= t('view.keywords.list') %>&nbsp;&nbsp;&nbsp;
          <big><i class='fa fa-spinner fa-spin text-success' ng-show='loading'></i></big>
        </h5>
      </div>

      <div class='ibox-content'>
        <div class='m-b-lg'>
          <div class='form-inputs'>
            <div class="row m-b-xs">
              <div class="col-xs-12">
                <input type='text' id='filter' class='form-control input-md' ng-model='config.filter.general' responsive-focus
                    placeholder="<%= t([:title], scope: [:activerecord, :attributes, :questionnaire]).join('/') %>">
              </div>
            </div>

            <div class="row">
              <div class='col-sm-6 m-t-xs' ng-init="statuses = <%= t('enums.specific_items.questionnaire.status').to_json %>">
                <select chosen data-placeholder="<%= t('enums.names.status') %>"
                        allow-single-deselect='true'
                        class='form-control'
                        ng-model='config.filter.status'
                        ng-options='key as label for (key, label) in statuses'>
                  <option></option>
                </select>
              </div>
              <div class='col-sm-6 m-t-xs' ng-init="subjects = <%= Subject.all.to_json(only: [:id, :description]) %>">
                <select chosen data-placeholder="<%= t('activerecord.models.subject.other') %>"
                        allow-single-deselect='true'
                        class='form-control'
                        ng-model='config.filter.subject'
                        ng-options='subject.id as subject.description for subject in subjects'>
                  <option></option>
                </select>
              </div>
            </div>
          </div>

          <div>
            <small ng-bind-html='infoMessage'></small>
            <small>
              <a class='pull-right' ng-click='clearFilters()'><%= t('buttons.clear_filters') %></a>
            </small>
          </div>
        </div>

        <hr>
        <%= custom_flash_messages info: {show: true, fixed: true, icon: :info, message: t('info.no_results')}, html: {'ng-hide' => 'tableParams.data.length > 0'} %>
        <div class='table-responsive' ng-show='tableParams.data.length > 0'>
          <div loading-container='tableParams.settings().$loading'>
            <table ng-table='tableParams' template-pagination='/angular-templates/ng-table/paginate' class='table table-striped table-hover'>
              <tr data-href='{{questionnaire.showHtmlUrl}}' ng-repeat='questionnaire in $data track by questionnaire.id'>

                <td data-title="'<%= t('activerecord.attributes.questionnaire.title') %>'" sortable="'title'">
                  <span class='label' ng-class="{'label-warning': questionnaire.status === 'pending',
                                                 'label-info': questionnaire.status === 'answered',
                                                 'label-success': questionnaire.status === 'fixed'}">

                    {{statuses[questionnaire.status]}}
                  </span>&nbsp;
                  {{questionnaire.title | truncate:35}}
                </td>
                <td data-title="'<%= t('activerecord.attributes.questionnaire.teacher') %>'" sortable="'teachers.name'">
                  {{questionnaire.teacher.name | truncate:30}}
                </td>
                <td data-title="'<%= t('activerecord.attributes.questionnaire.subject') %>'" sortable="'subjects.description'">
                  {{questionnaire.subject.description | truncate:15}}
                </td>
                <td data-title="'<%= t('activerecord.attributes.questionnaire.points') %>'" sortable="'points'">
                  <span class="label label-{{questionnaire.points > 0 ? 'info' : 'warning'}}">
                    {{questionnaire.points | number:2}}
                  </span>
                </td>
                <td data-title="'<%= t('activerecord.attributes.questionnaire.published_at') %>'" sortable="'questionnaires.updated_at'">
                  {{questionnaire.updatedAt | date:'short'}}
                </td>

              </tr>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>