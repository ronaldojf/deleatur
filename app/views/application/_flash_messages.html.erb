<% if notice || alert || options[:notice].present? || options[:alert].present? || options[:warning].present? || options[:info].present? %>

  <div id='messages'>
    <%= content_tag :div, class: "alert alert-success #{'alert-dismissable' unless options[:fixed] || options[:notice][:fixed]} #{options[:notice_class]}" do %>
      <% unless options[:fixed] || options[:notice][:fixed] %>
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
      <% end %>

      <% if (notice_icon = options[:notice][:icon] || options[:icon]) %>
        <i class='fa fa-<%= notice_icon == true ? '' : notice_icon %>'></i>
      <% end %>

      <%= options[:notice][:show] ? options[:notice][:message] : notice %>
    <% end if options[:notice][:show] || notice %>


    <%= content_tag :div, class: "alert alert-danger #{'alert-dismissable' unless options[:fixed] || options[:notice][:fixed]} #{options[:alert][:class]}" do %>
      <% unless options[:fixed] || options[:alert][:fixed] %>
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
      <% end %>

      <% if (alert_icon = options[:alert][:icon] || options[:icon]) %>
        <i class='fa fa-<%= alert_icon == true ? '' : alert_icon %>'></i>
      <% end %>

      <%= options[:alert][:show] ? options[:alert][:message] : alert %>
    <% end if options[:alert][:show] || alert %>


    <%= content_tag :div, class: "alert alert-warning #{'alert-dismissable' unless options[:fixed] || options[:warning][:fixed]} #{options[:warning][:class]}" do %>
      <% unless options[:fixed] || options[:warning][:fixed] %>
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
      <% end %>

      <% if (warning_icon = options[:warning][:icon] || options[:icon]) %>
        <i class='fa fa-<%= warning_icon == true ? '' : warning_icon %>'></i>
      <% end %>

      <%= options[:warning][:message] %>
    <% end if options[:warning][:show] %>


    <%= content_tag :div, class: "alert alert-info #{'alert-dismissable' unless options[:fixed] || options[:info][:fixed]} #{options[:info][:class]}" do %>
      <% unless options[:fixed] || options[:info][:fixed] %>
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
      <% end %>

      <% if (info_icon = options[:info][:icon] || options[:icon]) %>
        <i class='fa fa-<%= info_icon == true ? '' : info_icon %>'></i>
      <% end %>

      <%= options[:info][:message] %>
    <% end if options[:info][:show] %>
  </div>

<% end %>